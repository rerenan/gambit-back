// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                    Int                       @id @default(autoincrement())
  username              String                    @unique
  email                 String                    @unique
  password              String
  profile               Profile[]
  posts                 Post[]
  followers             Follow[]                @relation("followers")
  following             Follow[]                @relation("following")
  createdAt             DateTime                  @default(now())

  @@map("users")
}

model Post {
  id                    Int                       @id @default(autoincrement())
  user                  User                      @relation(fields: [userId], references: [id])
  userId                Int
  text                  String                    @db.VarChar(350)
  createdAt             DateTime                  @default(now())

  @@map("posts")
}

model Profile {
  id                    Int                       @id @default(autoincrement())
  userId                Int                       @unique
  user                  User                      @relation(fields: [userId], references: [id])
  profilePicture        String?
  biography             String?                   @db.VarChar(250)
  banner                String?
  createdAt             DateTime                  @default(now())

  @@map("profiles")
}

model Follow {
  id                    Int                       @id @default(autoincrement())
  userIdFollowed        Int                       
  userIdFollower        Int                         
  userFollowed          User                      @relation(name: "following", fields: [userIdFollowed], references: [id])
  userFollower          User                      @relation(name: "followers", fields: [userIdFollower], references: [id])
  createdAt             DateTime                  @default(now())

  @@map("followers")
  @@unique([userIdFollowed, userIdFollower])
}